# LLM API Keys
COPILOT_ACCESS_TOKEN=your_copilot_token_here

# Market Data API Keys
EXCHANGE_RATE_HOST_API_KEY=your_key_here

# Market Intelligence API Keys
SERPER_API_KEY=your_serper_key_here

# Serper domain filtering (optional)
# Set to 'false' to disable whitelisting and include all domains from Serper /news
# Accepted values: true/false/yes/no/1/0 (case-insensitive)
SERPER_ENABLE_WHITELIST=true

# Application Settings
LOG_LEVEL=INFO
DEBUG=false

# Demo/Offline mode (optional)
# When true, agent nodes return minimal fallback data on failures instead of partial errors.
# Leave as false for production to ensure real providers/LLMs are used.
OFFLINE_DEMO=false

# Database (SQLite - path set in config.yaml)
# No credentials needed for SQLite!
